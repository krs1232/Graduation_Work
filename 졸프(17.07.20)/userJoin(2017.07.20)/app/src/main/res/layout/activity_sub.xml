<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/button3"
        android:layout_width="280dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="1. 내 사물함 등록하기"
        android:textSize="25dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:stretchColumns="*">


        <TableRow
            android:layout_width="match_parent"
            android:background="#000000"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:layout_marginRight="1dp"
                android:background="#777777"
                android:gravity="center_horizontal"
                android:text="no"
                android:textSize="31sp" />

            <TextView
                android:layout_marginRight="1dp"
                android:background="#777777"
                android:gravity="center_horizontal"
                android:text="category"
                android:textSize="31sp" />

            <TextView
                android:layout_marginRight="1dp"
                android:background="#777777"
                android:gravity="center_horizontal"
                android:text="Value"
                android:textSize="31sp" />
        </TableRow>

        <TableRow
            android:background="#000000"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:text="1"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView_main_day"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:text="day"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editText_main_day"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:textSize="25sp" />

        </TableRow>


        <TableRow
            android:background="#000000"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:text="2"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView_main_name"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:text="name"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editText_main_name"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:textSize="25sp" />

        </TableRow>


        <TableRow
            android:background="#000000"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:text="3"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView_main_number"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:text="number"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editText_main_number"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:background="#000000"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:text="4"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView_main_password"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:text="password"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editText_main_password"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:inputType="textPassword"
                android:textSize="25sp" />
        </TableRow>


        <TableRow
            android:background="#000000"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:text="5"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView_main_phone"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:text="phone"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editText_main_phone"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:background="#000000"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:text="6"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView_main_box"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:text="box"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editText_main_box"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:textSize="25sp" />
        </TableRow>

    </TableLayout>


        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/button_main_insert"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Insert" />

        <TextView
            android:id="@+id/textView_main_result"
            android:layout_width="match_parent"
            android:layout_height="250dp" />


</LinearLayout>